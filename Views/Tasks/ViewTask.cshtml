@{
}

@model TaskManagerWebApp.Models.TaskItem

<body class="bg-dark text-white">
    <div class="bg-dark border p-4 rounded fs-5 pt-4" style="width:50%; margin:auto">

        <input type="hidden" asp-for="Id" />
       
        <h1 class="text-center mb-3">Details</h1>

            <div class="mb-3 col-sm-9" style="margin:auto;">
              <label for="exampleInputEmail1" class="form-label" asp-for="TaskName"><b>Task Name: </b> @Model.TaskName</label>
            </div>

        @if (Model.Description is not null)
        {
            <div class="mb-3 col-sm-9" style="margin:auto;">
                <label for="exampleInputEmail1" class="form-label" asp-for="Description"><b>Description: </b> @Model.Description</label>
              </div>
            
        }
        else
        {
           <div class="mb-3 col-sm-9" style="margin:auto;">
                <label for="exampleInputEmail1" class="form-label" asp-for="Description"><b>Description: </b>  None</label>
           </div>
        }

        @if (Model.DueDate is not null)
        {
            <div class="mb-3 col-sm-9" style="margin:auto;">
                <label for="exampleInputPassword1" class="form-label" asp-for="DueDate"><b>DueDate: </b> @Model.DueDate</label>
               </div>
        }
        else
        {
            <div class="mb-3 col-sm-9" style="margin:auto;">
                <label for="exampleInputEmail1" class="form-label" asp-for="Description"><b>DueDate: </b> None</label>
            </div>
        }

        @if (Model.IsCompleted)
        {
            <div class="mb-3 col-sm-9" style="margin:auto;">
                <label for="exampleInputEmail1" class="form-label" asp-for="IsCompleted"><b>Status: </b>  Completed</label>
            </div>
        }
        else
        {
            <div class="mb-3 col-sm-9" style="margin:auto;">
                <label for="exampleInputEmail1" class="form-label" asp-for="IsCompleted"><b>Status: </b> InComplete</label>
            </div>
        }   
      
    </div>
</body>
